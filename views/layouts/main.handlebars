<body>
    <header>
    <nav>
        <div class="navWide">
          <div class="wideDiv">
            <a href="/">HOMEPAGE</a>
            <a href="/profile">PROFILE</a>
            <a href="/community">COMMUNITY</a>
             {{#unless logged_in}}
            <a href="/login">LOGIN</a>
            {{/unless}}
            {{#if logged_in}}
            <a href="/" id="logout" type="submit">Log Out</a>
            {{/if}}
          </div>
        </div>
      </nav>
</header>

    {{{body}}}

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
    <script src="./javascript/logout.js"></script> 
    {{/if}}
